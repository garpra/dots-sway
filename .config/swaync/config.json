{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "control-center-width": 380,
  "control-center-height": 700,
  "notification-icon-size": 32,
  "notification-window-width": 500,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-grouping": false,
  "timeout": 5,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "buttons-grid",
    "backlight",
    "volume",
    "mpris",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "notifications": {
      "vexpand": false
    },
    "label": {
      "max-lines": 1,
      "text": "Controll Center"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "backlight": {
      "label": "  󰃠  ",
      "device": "intel_backlight",
      "min": 10
    },
    "volume": {
      "label": "    "
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰐥",
          "command": "sh ~/.scripts/menus/powermenu"
        },
        {
          "label": "",
          "command": "sh ~/.scripts/menus/clipboard-manager"
        },
        {
          "label": "󰌪",
          "command": "sh ~/.scripts/menus/power-profile-manager"
        },
        {
          "label": "",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
        },
        {
          "label": "󰑢",
          "command": "sh ~/.scripts/toggle-waybar"
        }
      ]
    }
  }
}
